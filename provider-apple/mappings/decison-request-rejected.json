{
    "request": {
        "method": "POST",
        "url": "/api/decision",
        "headers": {
            "Content-Type": {
                "contains": "application/json"
            }
        },
        "bodyPatterns": [
            {
                "matchesJsonPath": {
                    "expression": "$.transaction",
                    "contains": "no"
                }
            }
        ]
    },
    "response": {
        "status": 200,
        "headers": {
            "Content-Type": "application/json; charset=UTF-8"
        },
        "bodyFileName": "decision-response-rejected.json"
    }
}
